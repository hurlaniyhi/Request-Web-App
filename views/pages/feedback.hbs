   <br>
<div class="feed_container">
    <br>
    <img class="signUp_image" src="./w.png">
    <h1 class="feed_h2">user experience.</h1>
</div>
<br>
<div id="hide_it" style="display: block">
<div class="tablefeed_container" id="tableCont">
    <div class="indexfeed">
        <br>
    <h2 id="title" style="padding-left: 50px; color: white">All Requests</h2><br>
    <div style="margin-left: 35px; margin-right: 35px">
    <table class="table" style="table-layout: fixed; width: 100%; margin:auto">

        <thead>
        <tr>
            
            <th style="text-align: center;">Task</th>
            <th style="text-align: center;">Status</th>

        </tr>
        </thead>
    
    <tbody>
        {{#each list}}
        
        <tr>
            <td><button class="feed_but1" onclick="showRequest('{{this.request}}')">{{this.task}}</button></td>
            <td><button id="trigColor" class="feed_but5" style="background-color: {{this.color}};">{{this.status}}</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<br><br>
<p class="signIn_p3" style="color: green; padding-bottom: 20px">Click on task to see details</p>
</div>

</div>
</div>

<div class="feed_color_overlay"></div>
</div>
</div>
<div id="req_disp" style="display:none; margin-bottom: 50px; background-color: rgba(203,206,203,0.6);" >
        <textarea style="margin-left: 30px; margin-right: 30px; margin-top: 20px" class="feedInput1" id="myreq" type="text" name="request"></textarea><br><br>
        <button value="submit" class="feed_button1" onclick="clickBut()">Close</button><br><br>
        </div>
<script>
     
    function showRequest(e){
        
        document.getElementById("hide_it").style.display = "none"
        document.getElementById("req_disp").style.display = "inline-block"
        var reqdisp =e.replace(/&lt;br&gt;/g, '\r\n')
        document.getElementById("myreq").innerHTML = reqdisp
        document.getElementById("title").style.display = "none"
        //document.getElementById("tableCont").style.marginLeft = "27%"
        


    }

    function clickBut(){
        document.getElementById("hide_it").style.display = "block"
        document.getElementById("req_disp").style.display = "none"
        document.getElementById("title").style.display = "block"
        //document.getElementById("tableCont").style.marginLeft = "19%"

        
    }
    //document.getElementById("trigColor").value = changeColor(document.getElementById("trigColor").innerHTML)
   
     function feedmenul(){
        document.getElementById("menu1_feedbutton").style.color = "white"
         document.getElementById("menu1_feedbutton").style.backgroundColor = "#DC3545"
    }

    function feedmenul1(){
        document.getElementById("menu1_feedbutton").style.color = "#DC3545"
        document.getElementById("menu1_feedbutton").style.backgroundColor = "rgba(52,58,64,0.3)"
    }

     function feedmenuh(){
        document.getElementById("menu_feedbutton").style.color = "white"
         document.getElementById("menu_feedbutton").style.backgroundColor = "#28A745"
    }

    function feedmenuh1(){
        document.getElementById("menu_feedbutton").style.color = "#28A745"
        document.getElementById("menu_feedbutton").style.backgroundColor = "rgba(52,58,64,0.3)"
    }


</script>

